{
  "explorer.compactFolders": false,
  "cSpell.words": ["browserslist", "ckeditor", "craco", "stylelint"],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "prettier.arrowParens": "avoid",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true
  }
}
